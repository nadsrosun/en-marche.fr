{% extends 'base.html.twig' %}

{% block open_graph_image (homepage_url ~ static_asset('pages-sharers/adherents-en-marche.jpg', {'q': 70}))|raw %}

{% block banner '' %}

{% block stylesheets %}
    <style type="text/css">
        nav,
        .cc-window {
            display: none !important;
        }
    </style>
{% endblock %}

{% block content %}
    <main>
        {% block talents_header %}
            <header class="hero hero--minimalist hero--gradient hero--minimalist--center-20 progressive-background"
                    data-sd="{{ static_asset(talents_header_image, {'w': 300, 'q': 20}) }}"
                    data-hd="{{ static_asset(talents_header_image, {'w': 2000, 'q': 70}) }}">
                <div class="hero--minimalist__nav">
                    <a href="{{ path('homepage') }}">En Marche !</a>
                </div>
                <div class="hero--minimalist__content">
                    <h1>{% block talents_header_title %}{{ block('page_title') }}{% endblock %}</h1>
                    {% block talents_header_content %}{% endblock %}
                </div>
            </header>
        {% endblock %}

        <section class="content">
            <article class="l__wrapper--600">
                {% block talents_content %}{% endblock %}
            </article>
        </section>

    </main>
{% endblock %}
