{% extends 'base.html.twig' %}

{% block banner '' %}
{% block page_title page.title %}
{% block meta_description page.description %}
{% block meta_twitter_description page.twitterDescription ?: page.description %}
{% block canonical_url url('desintox_list') %}

{% block open_graph_image (homepage_url ~ static_asset('pages-sharers/desintox.png', {'q': 70}))|raw %}

{% block stylesheets %}
    <style type="text/css">
        body {
            background-color: #edf861;
        }
    </style>
{% endblock %}

{% block final_javascripts include('bot/_javascript.html.twig') %}

{% block content %}
<main class="content">
    <section class="desintox">

        <header class="space--60-0">
            <div class="l__wrapper--slim text--center">
                <h1 class="text--large text--inline text--on-white">
                    {{ page.title }}
                </h1>
            </div>
        </header>

        <hr class="l__wrapper" />

        <div class="l__wrapper--slim">
            <div class="desintox__intro text--body">
                {{ page.content|raw }}
            </div>

            <ul class="desintox__cases">
                {% for clarification in clarifications %}
                <li>
                    <h1 class="text--large">
                        <a href="{{ path('desintox_view', {'slug': clarification.slug}) }}"
                           class="link--no-decor">
                            {{ clarification.title }}
                        </a>
                    </h1>
                    <div>
                        <a href="{{ path('desintox_view', {'slug': clarification.slug}) }}"
                           class="btn btn--black">Lire</a>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </section>

</main>
{% endblock %}
